<div class="row">
    {{#each notes}}
    <div class="col-md-6 col-lg-4 col-xl-3 m-3">
        <div class="card">
            <div class="card-body py-4">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="col-md-6 col-lg-4 col-xl-3 m-3 d-flex justify-content-center align-items-center">
        <a href="/notes/add">
            <button type="button" class="btn btn-success btn-circle btn-xl"><i class="fas fa-plus"></i></button>
        </a>
    </div>

</div>